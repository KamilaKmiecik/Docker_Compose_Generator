@{
    ViewBag.Title = "Read Docker Compose";
}

<h2>Read Docker Compose</h2>

<form asp-action="Read" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Upload Docker Compose File</label>
        @* KONTROLKA DO WCZTYWANIA Z DYSKU *@
        <input type="file" name="file" class="form-control" />
        @if (ViewData["Error"] != null)
        {
            <span class="text-danger">@ViewData["Error"]</span>
        }
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}
