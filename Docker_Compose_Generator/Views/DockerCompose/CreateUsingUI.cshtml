@model Docker_Compose_Generator.Models.DockerComposeCreateDto

<h2>Create Docker Compose File</h2>

<form asp-action="CreateUsingUI" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Version"></label>
        <input asp-for="Version" class="form-control" required />
        <span asp-validation-for="Version" class="text-danger"></span>
    </div>

    <h3>Services</h3>
    <div id="services-container">
        @if (Model?.Services != null && Model.Services.Any())
        {
            for (int i = 0; i < Model.Services.Count; i++)
            {
                <div class="entry">
                    @{
                        var vd = new ViewDataDictionary(ViewData);
                        vd.TemplateInfo.HtmlFieldPrefix = Html.NameFor(e => e.Services);
                        @Html.Partial("_ServicePartial", Model.Services[i], vd);
                    };
                    <button type="button" class="btn btn-danger remove-entry">Remove Service</button>
                </div>
            }
        }
    </div>
    <button type="button" class="btn btn-secondary add-entry" data-type="service">Add Service</button>

    <h3>Networks</h3>
    <div id="networks-container">
        @if (Model?.Networks != null && Model.Networks.Any())
        {
            for (int i = 0; i < Model.Networks.Count; i++)
            {
                <div class="entry">
                    <button type="button" class="btn btn-danger remove-entry">Remove Network</button>
                </div>
            }
        }
    </div>
    <button type="button" class="btn btn-secondary add-entry" data-type="network">Add Network</button>

    <h3>Volumes</h3>
    <div id="volumes-container">
        @if (Model?.Volumes != null && Model.Volumes.Any())
        {
            for (int i = 0; i < Model.Volumes.Count; i++)
            {
                <div class="entry">
                    <button type="button" class="btn btn-danger remove-entry">Remove Volume</button>
                </div>
            }
        }
    </div>
    <button type="button" class="btn btn-secondary add-entry" data-type="volume">Add Volume</button>

    <button type="submit" class="btn btn-primary">Generate Docker Compose</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let serviceIndex = $('#services-container .entry').length;
            let networkIndex = $('#networks-container .entry').length;
            let volumeIndex = $('#volumes-container .entry').length;

            $('.add-entry').click(function () {
                var type = $(this).data('type');
                var index;

                if (type === 'service') index = serviceIndex++;
                if (type === 'network') index = networkIndex++;
                if (type === 'volume') index = volumeIndex++;

                var partialViewName = "Add" + type.charAt(0).toUpperCase() + type.slice(1) + "Partial";

                $.get('@Url.Action("GetPartial", "DockerCompose")', { type: type, index: index }, function (data) {
                    var newEntryDiv = $('<div class="entry"></div>').append(data);
                    $('#' + type + 's-container').append(newEntryDiv);
                }).fail(function (xhr, status, error) {
                    console.error("Error fetching partial:", status, error);
                });
            });

            $(document).on('click', '.remove-entry', function () {
                $(this).closest('.entry').remove();
            });
        });
    </script>
}
